{
  "schemaVersion": 1,
  "id": "treechop",
  "version": "${version}",

  "name": "HT's TreeChop",
  "description": "Makes trees more choppable.",
  "authors": [
    "hammertater"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/treechop",
    "sources": "https://github.com/hammertater/treechop"
  },

  "license": "CC0-1.0",
  "icon": "logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "ht.treechop.TreeChopFabric"
    ],
    "client": [
      "ht.treechop.client.FabricClient"
    ],
    "server": [
      "ht.treechop.server.FabricServer"
    ]
  },
  "mixins": [
    "treechop.mixins.json"
  ],

  "depends": {
    "forgeconfigapiport": ">=3.2.4",
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
  },
  "custom": {
    "waila:plugins": {
      "id": "treechop:plugin",
      "initializer": "ht.treechop.compat.Wthit",
      "environment": "client"
    }
  }
}